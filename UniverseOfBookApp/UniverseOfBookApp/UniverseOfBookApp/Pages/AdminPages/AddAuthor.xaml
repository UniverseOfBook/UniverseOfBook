<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="UniverseOfBookApp.Pages.AdminPages.AddAuthor" 
             BackgroundColor="#efefef">

    <ContentPage.Resources>
        <StyleSheet Source="../../Styles/MyStyle.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="20">
            <Image Source="writer" VerticalOptions="Center" HorizontalOptions="Center" />
            <Frame CornerRadius="20">
                <StackLayout>
                    <Entry Placeholder="Author Name" x:Name="AuthorName" />
                    <DatePicker x:Name="Date" />
                    <Editor x:Name="AuthorInfo" Placeholder="Author Information" HeightRequest="40" />
                    <Button Text="Add" BorderRadius="20" Clicked="AddButton_Clicked" />
                    <Button Text="Back" BorderRadius="20" Clicked="BackButton_Clicked" BackgroundColor="#795548" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>