<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniverseOfBookApp.Pages.SignUp">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="PlaceholderColor" Value="White"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout  BackgroundColor="#3b444b">
            <StackLayout BackgroundColor="#3b444b" VerticalOptions="Center" >
            <Image Source="man" HorizontalOptions="Center" />
            <Entry x:Name="Name" Placeholder="Enter Your Name" />
            <Entry x:Name="Email" Placeholder="Enter Your Email"/>
            <Entry x:Name="Password" Placeholder="Password"/>
            <Entry x:Name="PasswordAgain" Placeholder="Password Again"/>
            <Button x:Name="Submit" Text="Submit" Clicked="Submit_Clicked" BackgroundColor="Green" BorderRadius="15" BorderColor="Blue"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>