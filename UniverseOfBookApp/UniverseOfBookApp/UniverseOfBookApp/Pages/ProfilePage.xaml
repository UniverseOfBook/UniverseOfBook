<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniverseOfBookApp.Pages.ProfilePage"
             BackgroundColor="#efefef">

    <ContentPage.Resources>
        <StyleSheet Source="../Styles/MyStyle.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="20">

            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Image Source="defaultuser" WidthRequest="100"/>
                <Frame HorizontalOptions="EndAndExpand" CornerRadius="20">
                    <StackLayout>
                        <Label StyleClass="LabelClass" x:Name="userName"/>
                        <Label StyleClass="LabelClass" x:Name="wantLabel"/>
                        <Label StyleClass="LabelClass" x:Name="readLabel" />
                    </StackLayout>
                </Frame>
            </StackLayout>

            <StackLayout>
                <Grid x:Name="wantGrid" ColumnSpacing="10" RowSpacing="10">

                </Grid>

                <Grid x:Name="readGrid" ColumnSpacing="10" RowSpacing="10">

                </Grid>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>