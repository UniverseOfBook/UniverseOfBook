<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniverseOfBookApp.Pages.MainTabbedPage">

  <ContentPage.Resources>
    <StyleSheet Source="../Styles/MyStyle.css" />
  </ContentPage.Resources>

  <NavigationPage.TitleView>
    <StackLayout Orientation="Horizontal">
      <ImageButton Source="settings" HorizontalOptions="Start" WidthRequest="24" Clicked="SettingsClicked" BackgroundColor="#efefef"/>
      <Button Text="Add Friend" Clicked="AddFriendClicked" BackgroundColor="#efefef" TextColor="#6d6d6d" HorizontalOptions="EndAndExpand" HeightRequest="60" FontFamily="{StaticResource BoldFont}"/>
    </StackLayout>
  </NavigationPage.TitleView>

  <TabbedPage.Resources>
    <StyleSheet Source="../Styles/MyStyle.css" />
  </TabbedPage.Resources>

</TabbedPage>