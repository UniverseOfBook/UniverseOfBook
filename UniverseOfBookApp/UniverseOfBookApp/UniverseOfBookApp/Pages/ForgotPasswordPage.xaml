<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniverseOfBookApp.Pages.ForgotPasswordPage"
             BackgroundColor="White">

    <ContentPage.Resources>
        <StyleSheet Source="../Styles/MyStyle.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="20,50,20,20">
            <Image Source="forgetpassword.png" WidthRequest="150" HorizontalOptions="Center" />
            <Label Text="Forget Password?" FontSize="50" HorizontalOptions="Center"/>

            <StackLayout Margin="0,100,0,0">
                <Label Text="Enter your e-mail address below to reset your password." FontSize="Small"/>
                <Entry Placeholder="Email" Keyboard="Email" x:Name="emailEntry" />
                <StackLayout Orientation="Horizontal" Margin="0,15,0,0">
                    <Button Text="Back" Clicked="BackButtonClicked" BorderRadius="8" WidthRequest="120" BackgroundColor="#6d6d6d"/>
                    <Button Text="Submit" Clicked="SubmitButtonClicked" BorderRadius="8" HorizontalOptions="EndAndExpand" WidthRequest="150"/>
                </StackLayout>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>