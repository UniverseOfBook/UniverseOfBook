<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniverseOfBookApp.Pages.SearchPage" BackgroundColor="#ffffff">

    <ContentPage.Resources>
        <StyleSheet Source="../Styles/MyStyle.css" />
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout >
            <SearchBar Placeholder="Search books, authors or publishers..."  HorizontalOptions="StartAndExpand" SearchCommand="{Binding SearchCommand}" WidthRequest="800"  SearchButtonPressed="SearchBar_SearchButtonPressed"/>
            <StackLayout Margin="20" x:Name="StackL">

            </StackLayout >
            <Image Source="search.png" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" WidthRequest="250" Margin="0,0,0,80" x:Name="search"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>